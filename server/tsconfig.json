{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "../dist",
    "baseUrl": "src",
    "rootDir": "src",
    "rootDirs": [
      "./server/src",
      "../common"
    ],
    "paths": {
      "@common/*": [
        "../../common/*"
      ]
    },
    "composite": true,
    "tsBuildInfoFile": "../dist/server.tsbuildinfo"
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}
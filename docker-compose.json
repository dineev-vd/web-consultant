{
  "version": "3.8",
  "networks": {
    "db": {}
  },
  "volumes": {
    "db": {}
  },
  "services": {
    "db": {
      "env_file": "./development.env",
      "image": "postgres",
      "networks": {
        "db": {
          "aliases": ["webrtc-db"]
        }
      },
      "ports": [
        "5432:5432"
      ],
      "restart": "always"
    },
    "backend": {
      "build": ".",
      "depends_on": [
        "db"
      ],
      "env_file": "./development.env",
      "networks": [
        "db"
      ],
      "ports": [
        "8080:8080"
      ],
      "restart": "always",
      "volumes": [
        "./:/app"
      ]
    }
  }
}
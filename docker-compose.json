{
  "version": "3.4",
  "networks": {
    "db": {}
  },
  "volumes": {
    "db": {}
  },
  "services": {
    "db": {
      "env_file": "./development.env",
      "image": "postgres",
      "networks": {
        "db": {
          "aliases": ["webrtc-db"]
        }
      },
      "ports": [
        "5432:5432"
      ],
      "restart": "always"
    },
    "backend": {
      "build": ".",
      "env_file": "./production.env",
      "networks": [
        "db"
      ],
      "ports": [
        "80:8080"
      ],
      "restart": "always",
      "volumes": [
        "./:/app"
      ]
    }
  }
}

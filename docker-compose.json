{
  "version": "3.4",
  "networks": {
    "main": {},
    "db": {}
  },
  "services": {
    "proxy": {
      "image": "nginx",
      "ports": [
        "9000:80"
      ],
      "volumes": [
        "./proxy/nginx.conf:/etc/nginx/nginx.conf"
      ],
      "networks": [
        "db",
        "main"
      ]
    },
    "db": {
      "env_file": "./development.env",
      "image": "postgres",
      "networks": {
        "db": {
          "aliases": [
            "webrtc-db"
          ]
        }
      },
      "ports": [
        "5432:5432"
      ],
      "restart": "always"
    },
    "server": {
      "build": {
        "dockerfile": "./Dockerfile.server",
        "context": "."
      },
      "env_file": "./development.env",
      "networks": [
        "db",
        "main"
      ],
      "ports": [
        "8080:8080",
        "8081:8081"
      ],
      "restart": "always"
    },
    "client": {
      "build": {
        "dockerfile": "./Dockerfile.client",
        "context": "."
      },
      "env_file": "./development.env",
      "networks": [
        "main"
      ],
      "ports": [
        "8090:8080"
      ],
      "restart": "always"
    },
    "janus":{
      "image":"canyan/janus-gateway:0.10.7",
      "command": ["usr/local/bin/janus", "-F", "/usr/local/etc/janus"],
      "ports":[
        "8188:8188"
      ],
      "volumes":[
        "./janus/janus.jcfg:/usr/local/etc/janus/janus.jcfg"
      ],
      "networks":[
        "main"
      ],
      "restart":"always"
    }
  }
}
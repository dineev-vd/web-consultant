{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "rootDirs": [
      "./common",
      "./server"
    ],
    "baseUrl": ".",
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@common/*": [
        "common/*"
      ]
    },
    "jsx": "react"
  }
}
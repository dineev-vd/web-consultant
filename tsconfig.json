{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDirs": [
      "admin",
      "client",
      "common",
      "server"
    ],
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@common/*": [
        "common/*"
      ]
    },
    "jsx": "react",
    "strictPropertyInitialization": false
  },
  "include": [
    "common/**/*"
  ],
}